extends layout
block content
  .auth-wrapper
    .paper-wrapper

      include partials/validation
        
      if invalidCredentials
        .paper.error.shake
          h4 Invalid credentials
          p Please try logging in again or 
            a(href='#{settings.baseUrl}/forgot') click here to receive a password reset email
          
      .paper.login
        h3 Login
        form(method='post' action='#{settings.baseUrl}/login')
          input(type='hidden', name='_csrf', value=_csrf)
          input(type='text', name='email', placeholder='Enter your email address', value=email)
          input(type='password', name='password', placeholder='Enter your password')
          .main-buttons
            button.raised-button.secondary(type="submit") Sign in
          .secondary-buttons
            a.flat-button.not-padded(type="submit", href='#{settings.baseUrl}/sign-up') Sign up
            a.flat-button.not-padded(type="submit", href='#{settings.baseUrl}/forgot') Forgot password