extends ../layout
block content
  .auth-wrapper
    .paper-wrapper
      
      include ../partials/validation
      if notRegisteredError
        .paper.error
          h4 Unknown email address
          p This email is not registered here, please check that you did not make a typo.
        
      .paper.forgot
        h3 Forgot password
        form(method='post' action='#{settings.baseUrl}/forgot')
          input(type='hidden', name='_csrf', value=_csrf)
          input(type='text', name='email', placeholder='Enter your email address', value=email)
          p.help Please enter your email address above and we will send you a password reset link.
            
          .main-buttons
            a.flat-button(href='#{settings.baseUrl}/login') Cancel
            button.raised-button.secondary(type="submit") Submit